<Window
    x:Class="PointlessWaymarks.WpfCommon.S3BucketDestroyer.BucketDestroyerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:markdownDisplay="clr-namespace:PointlessWaymarks.WpfCommon.MarkdownDisplay"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:s3BucketDestroyer="clr-namespace:PointlessWaymarks.WpfCommon.S3BucketDestroyer"
    xmlns:status="clr-namespace:PointlessWaymarks.WpfCommon.Status"
    xmlns:stringDropdownDataEntry="clr-namespace:PointlessWaymarks.WpfCommon.StringDropdownDataEntry"
    xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
    xmlns:utility="clr-namespace:PointlessWaymarks.WpfCommon.Utility"
    xmlns:valueConverters="clr-namespace:PointlessWaymarks.WpfCommon.ValueConverters"
    xmlns:windowScreenShot="clr-namespace:PointlessWaymarks.WpfCommon.WindowScreenShot"
    Title="S3 Bucket Destroyer - are you really sure you should use this?"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance s3BucketDestroyer:BucketDestroyerContext}"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PointlessWaymarks.WpfCommon;component/ClassicGreenResourceDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <utility:BindingProxy x:Key="Proxy" Data="{Binding}" />
            <valueConverters:S3ProviderIsAmazonCollapsedConverter x:Key="S3ProviderIsAmazonCollapsed" />
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <TabControl>
            <TabItem Header="Editor">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <ScrollViewer HorizontalScrollBarVisibility="Disabled">
                        <StackPanel CanHorizontallyScroll="False" Orientation="Vertical">
                            <StackPanel.Resources>
                                <Style x:Key="EntryStyle" TargetType="Control">
                                    <Setter Property="Margin" Value="0,8,8,0" />
                                </Style>
                                <Style x:Key="EntryListButton" TargetType="Button">
                                    <Setter Property="Margin" Value="4,24,4,12" />
                                    <Setter Property="Width" Value="244" />
                                    <Setter Property="HorizontalAlignment" Value="Left" />
                                    <Setter Property="Padding" Value="2,4,2,4" />
                                </Style>
                            </StackPanel.Resources>
                            <stringDropdownDataEntry:StringDropdownDataEntryControl
                                Width="240"
                                HorizontalAlignment="Left"
                                DataContext="{Binding UserCloudProviderEntry}"
                                Style="{StaticResource EntryStyle}" />
                            <stringDropdownDataEntry:StringDropdownDataEntryControl
                                Width="240"
                                HorizontalAlignment="Left"
                                DataContext="{Binding UserAwsRegionEntry}"
                                Style="{StaticResource EntryStyle}"
                                Visibility="{Binding Data.UserCloudProviderEntry.SelectedItem.DataString, Converter={StaticResource S3ProviderIsAmazonCollapsed}, Source={StaticResource Proxy}}" />
                            <StackPanel Margin="0,8,8,0" Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <Label
                                        Content="Cloud Credentials"
                                        Style="{StaticResource DataEntryLabelStyle}"
                                        ToolTip="Enter the credentials to use to access S3" />
                                    <Image
                                        Width="{StaticResource SmallIconSize}"
                                        VerticalAlignment="Center"
                                        Source="{svgc:SvgImage Source=/Icons/alert-octagon.svg,
                                                               AppName=PointlessWaymarks.WpfCommon}"
                                        ToolTip="Please make sure all credentials are entered."
                                        Visibility="{Binding CloudCredentialsHaveValidationIssues, Converter={StaticResource BooleanToVisibility}}" />
                                </StackPanel>
                                <Button
                                    Width="240"
                                    Margin="8,0,4,0"
                                    Padding="2"
                                    HorizontalAlignment="Left"
                                    Command="{Binding EnterCloudCredentialsCommand}">
                                    Enter Cloud Credentials for Job
                                </Button>
                            </StackPanel>
                            <Button Command="{Binding GetBucketsCommand}" Style="{StaticResource EntryListButton}">Get Buckets</Button>
                            <stringDropdownDataEntry:StringDropdownDataEntryControl
                                Width="240"
                                HorizontalAlignment="Left"
                                DataContext="{Binding UserCloudBucketEntry}"
                                Style="{StaticResource EntryStyle}" />
                            <Button Command="{Binding DestroyBucketCommand}" Style="{StaticResource EntryListButton}">DESTROY</Button>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="Help and Notes">
                <markdownDisplay:HelpDisplayControl DataContext="{Binding HelpContext}" />
            </TabItem>
        </TabControl>
        <windowScreenShot:WindowScreenShotControl
            Width="26"
            Height="26"
            Margin="2"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom" />
        <status:StatusControl
            Grid.Row="0"
            Grid.Column="0"
            d:IsHidden="True"
            DataContext="{Binding StatusContext}" />
    </Grid>
</Window>