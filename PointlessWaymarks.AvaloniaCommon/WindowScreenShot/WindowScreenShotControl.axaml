<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:svg="using:Avalonia.Svg.Skia"
             xmlns:windowScreenShot="clr-namespace:PointlessWaymarks.AvaloniaCommon.WindowScreenShot"
             mc:Ignorable="d" d:DesignWidth="26" d:DesignHeight="26"
             x:Class="PointlessWaymarks.AvaloniaCommon.WindowScreenShot.WindowScreenShotControl"
             x:DataType="windowScreenShot:WindowScreenShotControl">
    <Grid>
        <Button MinWidth="26" 
                MinHeight="26"
                Margin="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Command="{Binding WindowScreenShotCommand}"
                CommandParameter="{Binding $parent[Window]}"
                Opacity="0.4">
            <svg:Svg Width="16" 
                     Height="16"
                     Path="/Icons/camera-outline.svg">
                <ToolTip.Tip>
                    <TextBlock Text="Take Screen Shot of Application"/>
                </ToolTip.Tip>
            </svg:Svg>
        </Button>
    </Grid>
</UserControl> 