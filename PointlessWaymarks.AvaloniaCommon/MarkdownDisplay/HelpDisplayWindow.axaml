<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:markdownDisplay="clr-namespace:PointlessWaymarks.AvaloniaCommon.MarkdownDisplay"
        xmlns:status="clr-namespace:PointlessWaymarks.AvaloniaCommon.Status"
        xmlns:windowScreenShot="clr-namespace:PointlessWaymarks.AvaloniaCommon.WindowScreenShot"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="PointlessWaymarks.AvaloniaCommon.MarkdownDisplay.HelpDisplayWindow"
        Title="{Binding WindowTitle}"
        Width="800" Height="450"
        x:DataType="markdownDisplay:HelpDisplayWindow">
    <Grid>
        <markdownDisplay:HelpDisplayControl DataContext="{Binding HelpContext}" />
        <status:StatusControl Grid.Row="0" 
                            DataContext="{Binding StatusContext}" />
        <windowScreenShot:WindowScreenShotControl
            Width="40"
            Margin="2,2,2,6"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom" />
    </Grid>
</Window> 