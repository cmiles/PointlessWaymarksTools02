<UserControl
    x:Class="PointlessWaymarks.AvaloniaToolkit.ProgramUpdateMessageControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:PointlessWaymarks.AvaloniaToolkit.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:programUpdateMessage="clr-namespace:PointlessWaymarks.AvaloniaToolkit.ProgramUpdateMessage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="programUpdateMessage:ProgramUpdateMessageContext"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:StringIsNotNullOrWhitespaceToBooleanConverter x:Key="StringIsNotNullOrWhitespaceToBoolean" />
    </UserControl.Resources>
    <Grid
        MaxWidth="400"
        Margin="8"
        IsVisible="{Binding ShowMessage}"
        RowDefinitions="Auto">
        <Border
            Background="Goldenrod"
            BorderBrush="Black"
            BorderThickness="2"
            CornerRadius="14">
            <Grid Margin="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock
                    Margin="8"
                    Background="Transparent"
                    FontSize="14"
                    FontWeight="Bold"
                    Text="{Binding UpdateMessage}"
                    TextWrapping="Wrap" />
                <Grid Grid.Row="1" Margin="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Button HorizontalAlignment="Stretch" Command="{Binding UpdateCommand}">Update Now</Button>
                    <Button
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        Command="{Binding DismissCommand}">
                        Not Now
                    </Button>
                </Grid>
                <TextBlock
                    Height="90"
                    Grid.Row="2"
                    Margin="8"
                    FontSize="14"
                    IsVisible="{Binding Progress, Converter={StaticResource StringIsNotNullOrWhitespaceToBoolean}}"
                    Text="{Binding Progress}"
                    TextWrapping="Wrap" />
            </Grid>
        </Border>
    </Grid>
</UserControl>